{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext", "esnext.promise"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "paths": {
      "*": ["shared/*", "client/*", "server/*", "*"]
    },
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": [
    "**/__tests__", // test will be compiled by jest & ts-jest during test run
    "**/__mocks__",
    "**/scripts"
  ]
}
